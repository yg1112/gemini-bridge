{
  "manifest_version": 3,
  "name": "Gemini Neural Bridge",
  "version": "1.0",
  "permissions": ["activeTab", "scripting"],
  "host_permissions": ["https://gemini.google.com/*"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://gemini.google.com/*"],
      "js": ["content.js"]
    }
  ]
}
